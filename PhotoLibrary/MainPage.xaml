<Page
    x:Class="PhotoLibrary.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PhotoLibrary"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid>
        <StackPanel>
            <Button Content="Add Library" Click ="Button_Click" Margin=" 100, 100, 0, 0"/>
        </StackPanel>
        <StackPanel>
            <Image></Image>
            <TextBox Name="photoLibraryText" Margin="234,271,137,177" Text="{Binding Title, Mode=TwoWay}" Height="50" Grid.Row="0" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            <Button Content="Delete" Click="Button_Click_1"  />
        </StackPanel>
    </Grid>
</Page>
